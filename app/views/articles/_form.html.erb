<%= form_with scope: :article, url: article_create_path, locale: true do |f| %>
<div>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |err| %>
        <li><%= err %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="form-main">
  <%= f.text_field :body, placeholder: "Anong chismis natin?" %>

</div>

<% end %>