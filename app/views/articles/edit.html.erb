<section class="form-container">
  <div class="form-label">
    <h1>EDIT CHISMIS</h1>
  </div>
  
  <div class="login-form">
    
    <%= form_with scope: :article, url: article_update_path, method: :put, locale: true do |f| %>
    <div class="error-container">
      <% if @article.errors.any? %>
        <ul>
          <% @article.errors.full_messages.each do |err| %>
            <li>- <%= err %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="form-main">
      <%= f.text_field :body %>
      <% if @article.user_id == check_current_user&.id %>
      <%= f.submit %>
      <% end %>
    </div> 
  <% end %>
  </div>
</section>